DROP TABLE child_section;
DROP TABLE children;
DROP TABLE departments;
DROP TABLE employees;
DROP TABLE details;
DROP TABLE sections;

CREATE TABLE employees (
	employer_id serial PRIMARY KEY,
	name varchar(15),
	surname varchar(15),
	department varchar(15),
	salary int
)

